{
  "distSpecVersion": "1.0.1",
  "storage": {
    "rootDirectory": "{{ zot_data_dir }}"
  },
  "http": {
    "address": "{{ zot_bind_address }}",
    "port": "{{ zot_port }}"
  },
  "log": {
    "level": "{{ zot_log_level }}"
  },
  "extensions": {
    "sync": {
      "enable": true,
      "registries": [
{% for registry in zot_registries %}
        {
          "urls": ["{{ registry.url }}"],
          "content": [
            "prefix": "**",
            "destination": "/{{ registry.name }}"
          ],
          "onDemand": true,
          "tlsVerify": true
        }{% if not loop.last %},{% endif %}
{% endfor %}
      ]
    },
    "search": {
      "enable": {{ zot_search_enabled | lower }}
    }
  }
}